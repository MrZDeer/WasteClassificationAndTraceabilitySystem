
<view class="weui-cells weui-cells_after-title all" >
  <view class="weui-cell weui-cell_active">
    <view class="weui-cell__hd">
      <view class="weui-label">用户</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" value="{{record.name}}"  bindblur="changename"/>
    </view>
  </view>
  <view class="weui-cell weui-cell_active">
    <view class="weui-cell__hd">
      <view class="weui-label">地址</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" value="{{record.address}}" bindblur="changeaddress" />
    </view>
  </view>
  <view class="weui-cell weui-cell_active">
    <view class="weui-cell__hd">
      <view class="weui-label">垃圾类型</view>
    </view>
    <view class="weui-cell__bd">
      <input class="weui-input" value="{{record.id}}" bindblur="changetype"/>
    </view>
  </view>
  <view class="weui-cell weui-cell_active">
                <view class="weui-cell__hd">
                    <view class="weui-label">设置日期</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="date" value="{{date}}" start="2015-09-01" end="2017-09-01" bindchange="bindDateChange">
                        <view class="weui-input">{{date}}</view>
                    </picker>
                </view>
            </view>
            <view class="weui-cell weui-cell_active">
                <view class="weui-cell__hd">
                    <view class="weui-label">设置时间</view>
                </view>
                <view class="weui-cell__bd">
                    <picker mode="time" value="{{time}}" start="09:01:00" end="21:01:00" bindchange="bindTimeChange">
                        <view class="weui-input">{{time}}</view>
                    </picker>
                </view>
            </view>
            </view>
<view class="button-sp-area cell sub">
			<a class="weui-btn_cell weui-btn_cell-warn" bindtap="bindsubmit">将此用户此投放设为违规</a>
</view>
<view class="page__bd">
<a class="weui-btn weui-btn_default" bindtap="sub">此用户未违规</a>
</view>      